- model_class = Todo

.page-header
  %h1 Todos

%table.table.table-striped
  %thead
    %tr
      -# %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:complete)
      -# %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @todos.each do |todo|
      %tr
        -# %td= link_to todo.id, todo_path(todo)
        %td= todo.name
        %td
          - if todo.complete
            = fa_icon 'check-square-o'
          - else
            = fa_icon 'square-o'
        -# %td= todo.user_id
        %td=l todo.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_todo_path(todo), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), todo_path(todo), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_todo_path, :class => 'btn btn-primary'
